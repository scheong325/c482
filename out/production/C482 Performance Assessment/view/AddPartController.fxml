            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Add Part" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <RadioButton fx:id="inHouseRBtn" mnemonicParsing="false" onAction="#inHouseRBtnOnAction" selected="true" text="In-House" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font size="11.0" />
               </font>
               <toggleGroup>
                  <ToggleGroup fx:id="addPartTG" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="outsourcedRBtn" mnemonicParsing="false" onAction="#outsourcedRBtnOnAction" text="Outsouced" toggleGroup="$addPartTG" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
               <font>
                  <Font size="11.0" />
               </font>
            </RadioButton>
            <Label alignment="TOP_LEFT" text="ID" GridPane.halignment="LEFT" GridPane.rowIndex="3">
               <GridPane.margin>
                  <Insets left="35.0" />
               </GridPane.margin>
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
            <Label alignment="TOP_LEFT" text="Name" GridPane.halignment="LEFT" GridPane.rowIndex="4">
               <GridPane.margin>
                  <Insets left="35.0" />
               </GridPane.margin>
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
            <Label alignment="TOP_LEFT" text="Inventory" GridPane.halignment="LEFT" GridPane.rowIndex="5">
               <GridPane.margin>
                  <Insets left="35.0" />
               </GridPane.margin>
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
            <Label alignment="TOP_LEFT" text="Price" GridPane.halignment="LEFT" GridPane.rowIndex="6">
               <GridPane.margin>
                  <Insets left="35.0" />
               </GridPane.margin>
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
            <Label alignment="TOP_LEFT" text="Max" GridPane.halignment="LEFT" GridPane.rowIndex="7">
               <GridPane.margin>
                  <Insets left="35.0" />
               </GridPane.margin>
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
            <Label fx:id="machineCompLabel" alignment="TOP_LEFT" text="Machine ID" GridPane.halignment="LEFT" GridPane.rowIndex="8">
               <GridPane.margin>
                  <Insets left="35.0" />
               </GridPane.margin>
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
            <TextField fx:id="addPartIdTxt" editable="false" promptText="Auto Gen- Disabled" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <font>
                  <Font name="System Italic" size="10.0" />
               </font>
            </TextField>
            <TextField fx:id="addPartNameTxt" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <TextField fx:id="addPartInventoryTxt" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <TextField fx:id="addPartPriceTxt" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <TextField fx:id="addPartMaxTxt" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="8" />
            <TextField fx:id="addPartMachineIdTxt" GridPane.columnIndex="1" GridPane.rowIndex="8" />
            <TextField fx:id="addPartMinTxt" GridPane.columnIndex="3" GridPane.rowIndex="7" />
            <Label text="Min" GridPane.columnIndex="2" GridPane.rowIndex="7">
               <font>
                  <Font size="11.0" />
               </font>
               <GridPane.margin>
                  <Insets left="40.0" />
               </GridPane.margin>
            </Label>
            <Button mnemonicParsing="false" onAction="#onActionSave" text="Save" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="10" />
            <Button mnemonicParsing="false" onAction="#onActionDisplayMain" text="Cancel" GridPane.columnIndex="3" GridPane.rowIndex="10" />
         </children>
      </GridPane>
   </children>
